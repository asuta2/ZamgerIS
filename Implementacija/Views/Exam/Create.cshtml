@model ooadproject.Models.Exam
@{
    ViewData["Title"] = "Kreirajte ispit";
}
@section SideMenu {
    @await Html.PartialAsync("_TeacherHomePartial")
}
<h1>Kreiraj ispit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pb-2" >
                <label asp-for="CourseID" class="control-label pb-1"> Predmet</label>
                <select asp-for="CourseID" class="form-control" onmouseover="this.style.cursor='pointer'" asp-items="@(ViewBag.CourseID as IEnumerable<SelectListItem>)"></select>
            </div>
            <div class="form-group pb-2">
                <label asp-for="Time" class="control-label pb-1">Vrijeme</label>
                <input asp-for="Time" class="form-control" onmouseover="this.style.cursor='pointer'" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="Type" class="control-label pb-1">Tip ispita</label>
                <select asp-for="Type" class="form-control" asp-items="ViewBag.ExamTypes" onmouseover="this.style.cursor='pointer'"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="TotalPoints" class="control-label pb-1">Ukupno bodova</label>
                <input asp-for="TotalPoints" class="form-control" />
                <span asp-validation-for="TotalPoints" class="text-danger"></span>
            </div>
            <div class="form-group pb-2">
                <label asp-for="MinimumPoints" class="control-label pb-1">Prag</label>
                <input asp-for="MinimumPoints" class="form-control" />
                <span asp-validation-for="MinimumPoints" class="text-danger"></span>
            </div>
            <div class="form-group pt-1">
                <input type="submit" value="Kreiraj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="pt-2">
    <a asp-action="Index">Vratite se</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
