@{
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    var action = ViewContext.RouteData.Values["action"].ToString();
}
<ul class="list-unstyled ps-0 d-flex nav nav-pills flex-column flex-nowrap mb-auto align-items-center align-items-md-start  ">
    <li class="nav-item mb-1">
        <a class="btn align-items-center rounded-active active text-start text-sm" onmouseover="this.style.backgroundColor='lightblue'" onmouseout="this.style.backgroundColor='white'" asp-controller="Home" asp-action="Index">Početna</a>
    </li>

    <li class="nav-item mb-1">
        <button class="btn btn-toggle align-items-center rounded collapsed text-decoration-none text-sm text-sm-start" onmouseover="this.style.backgroundColor='lightblue'" onmouseout="this.style.backgroundColor='white'" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="true" aria-current="true" style="min-width:200px;">
                <i class="fa-solid fa-arrow-right" style="font-size: 1rem;"></i>
                Predmeti
            </button>
            <div class="collapse text-start" id="home-collapse">
            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small" style="padding-left: 1rem; text-align: center;">
                    @foreach (var course in ViewBag.Courses)
                    {
                        <li>
                            <a class="link-dark rounded text-decoration-none text-sm-sub" onmouseover="this.style.backgroundColor='lightblue'" onmouseout="this.style.backgroundColor='white'"
                               asp-controller="StudentCourse" asp-action="StudentCourseStatus" asp-route-id="@course.ID" style="padding: 2px;">@course.Course.Name</a>
                        </li>
                    }
                </ul>
            </div>
    </li>
    <li class="nav-item  mb-1">
        <a class="btn align-items-center rounded text-decoration-none text-start text-sm" onmouseover="this.style.backgroundColor='lightblue'" onmouseout="this.style.backgroundColor='white'" asp-controller="Request" asp-action="StudentRequests">Aktuelni zahtjevi</a>
    </li>
    <li class="nav-item mb-1">
        <a class="btn align-items-center rounded text-decoration-none text-start text-sm" onmouseover="this.style.backgroundColor='lightblue'" onmouseout="this.style.backgroundColor='white'" asp-controller="ExamRegistration" asp-action="Index">Prijava ispita</a>
    </li>
    <li class="nav-item mb-1">
        <a class="btn align-items-center rounded text-decoration-none text-start text-sm" onmouseover="this.style.backgroundColor='lightblue'" onmouseout="this.style.backgroundColor='white'" asp-controller="StudentCourse" asp-action="StudentOverallStatus">Pregled rezultata studija</a>
    </li>
</ul>
