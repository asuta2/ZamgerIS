@model ooadproject.Models.Student

@{
    ViewData["Title"] = "Kreiraj Studenta";
    Layout = "~/Views/Shared/_LayoutStudentService.cshtml";
}

<h1>Dodaj novog studenta</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Index" class="control-label">Indeks</label>
                <input asp-for="Index" class="form-control" />
                <span asp-validation-for="Index" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Department" class="control-label">Odsjek</label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Year" class="control-label">Godina studija</label>
                <input asp-for="Year" class="form-control" value="1" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="FirstName" class="control-label">Ime</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="LastName" class="control-label">Prezime</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="UserName" class="control-label">Korisničko ime</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <input type="submit" value="Kreiraj Studenta" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati se</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
